<div class="col-md-4 col-md-offset-4">
  <h1>登录</h1>
  <div class="form-group">
    <input type="text" class="form-control" v-model="name" placeholder="账号" name="" value="">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" v-model="pass" placeholder="密码" name="" value="">
  </div>
  <div class="form-group">
    <button type="button" class="btn btn-default" v-on:click="submit" name="button">提交</button>
  </div>
</div>

<script>
  var vm = new Vue({
    el: "#app",
    data: {
      name: '',
      pass: ''
    },
    methods: {
      submit() {
        axios.post('/api/v1/signin', {
          name: vm.name,
          pass: vm.pass
        })
        .then(function(response){
          return response.data;
        })
        .then(function(data){
          window.location = '/';
        })
        .catch(function(err){
          alert(err.response.data.error);
        })
      }
    }
  });
</script>
